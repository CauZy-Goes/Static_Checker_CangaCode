program SistemaAcademico

declarations
    integer matricula
    string nome
    char genero
    real nota1
    real nota2
    boolean aprovado
endDeclarations

functions
funcType calcularMedia
    real nota1
    real nota2
endFuncType

funcType exibirAluno
    integer matricula
    string nome
    real media
    boolean aprovado
endFuncType
endFunctions

start
    matricula = 20231001
    nome = "Ana Beatriz"
    genero = 'F'
    nota1 = 8.5
    nota2 = 9.3

    media = calcularMedia(nota1, nota2)

    if media >= 7.0 then
        aprovado = true
    else
        aprovado = false
    endif

    exibirAluno(matricula, nome, media, aprovado)
endProgram
